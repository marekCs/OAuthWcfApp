<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<appSettings/>
	<connectionStrings/>
	<system.web>
		<compilation debug="true" >
		</compilation>
		<authentication mode="Windows" />
	</system.web>
	<system.serviceModel>
		<bindings>
			<customBinding>
				<binding name="WebHttpBinding_ITokenService">
					<textMessageEncoding messageVersion="Soap12" />
					<httpTransport/>
				</binding>
				<binding name="WebHttpBinding_IUserService">
					<textMessageEncoding messageVersion="Soap12" />
					<httpTransport/>
				</binding>
			</customBinding>
		</bindings>
		<client>
			<endpoint address="http://localhost:8089/Services/TokenService.svc"
                      binding="customBinding"
                      bindingConfiguration="WebHttpBinding_ITokenService"
                      contract="TokenClient.ITokenService"
                      name="WebHttpBinding_ITokenService" />

			<endpoint address="http://localhost:8089/Services/UserService.svc"
                      binding="customBinding"
                      bindingConfiguration="WebHttpBinding_IUserService"
                      contract="UserClient.IUserService"
                      name="WebHttpBinding_IUserService" />
		</client>
	</system.serviceModel>
	<system.webServer>
		<httpProtocol>
			<customHeaders>
				<add name="Access-Control-Allow-Origin" value="*" />
				<add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
				<add name="Access-Control-Allow-Headers" value="Content-Type" />
			</customHeaders>
		</httpProtocol>
	</system.webServer>
</configuration>
