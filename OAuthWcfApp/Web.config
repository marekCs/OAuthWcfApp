<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<appSettings>
		<add key="SecretKey" value="YourSuperSecretKeyHere" />
		<add key="TokenExpiryMinutes" value="20" />
	</appSettings>
	<system.serviceModel>
		<services>
			<service behaviorConfiguration="userServiceBehavior" name="OAuthWcfApp.Services.UserService">
				<endpoint address="" binding="wsHttpBinding" contract="OAuthWcfApp.Services.IUserService">
				</endpoint>
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
			</service>
			<service behaviorConfiguration="OAuthWcfApp.Services.TokenServiceBehavior"
                name="OAuthWcfApp.Services.TokenService">
				<endpoint address="" binding="webHttpBinding" contract="OAuthWcfApp.Services.ITokenService">
				</endpoint>
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior name="userServiceBehavior">
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="false" />
					<serviceDebug includeExceptionDetailInFaults="false" />
					<serviceAuthorization serviceAuthorizationManagerType="OAuthWcfApp.Authorize.RoleBasedAuthorizationManager, OAuthWcfApp" />
				</behavior>
				<behavior name="OAuthWcfApp.Services.TokenServiceBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="false" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>